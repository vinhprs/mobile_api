<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:o="urn:schemas-microsoft-com:office:office">
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1" name="viewport">
    <meta name="x-apple-disable-message-reformatting">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="telephone=no" name="format-detection">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <script src="
    https://cdn.jsdelivr.net/npm/chakra-ui@0.3.9/dist/index.min.js
    "></script>
    <script src="
    https://cdn.jsdelivr.net/npm/react-icons@4.12.0/fa/index.esm.min.js
    "></script>
    <title>New message</title>
    <style type="text/css">
        body{
            font-family: 'Inter', sans-serif;
        }
        .content{
            max-width: 1200px;
            width: 100%;
            margin: 0 auto;
            color: #1D2026;
        }
        .title{
            font-weight: 600;
            font-size: 24px;
            margin-bottom: 16px;
            text-align: center;
            padding: 40px 0;
            color: rgb(39, 197, 94)
        }
        .notification{
            margin: 0 auto;
            text-align: center;
        }
        .text{
            color: rgb(39, 197, 94)
        }
        .icon{
            color: rgb(39, 197, 94);
            margin: 0 auto;
            display: block;
            text-align: center;
            font-size: 50px;
            /* margin-bottom: 40px; */
        }
        .border{
            margin: 0 auto;
            margin-bottom: 40px;
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100px;
            height: 100px;
            border-radius: 50%;
            border: 1px solid rgb(39, 197, 94);
        }
        .img-course{
            width: 150px;
            height: 150px;
            object-fit: cover;
        }
        .content-table{
            display: flex;
            gap: 0 20px;
            width: 100%;
            overflow-wrap: break-word;
        }
        .icon_star{
            font-size: 20px;
            color: #FD8E1F;
        }
        .div_star{
            margin-bottom: 8px;
            display: flex;
            gap: 0 2px;
        }
        .course_title{
            /* text-[#1D2026] font-medium mb-[10px] whitespace-pre-wrap */
            font-size: 16px;
            color: #1D2026;
            font-weight: 500;
            margin-bottom: 10px;
            /* white-space: pre-wrap; */
        }
    </style>
   
</head>
<body>

    <div class="content">
        <h1 class="title">
            Thanh toán khóa học thành công
        </h1>
        <div class="border">

            <i class="fa fa-check icon" aria-hidden="true"></i>
        </div>
        <div>
            <div className="flex flex-col gap-y-3">
                <h2 style="text-align: center;">
                  Bạn đã thanh toán thành công {{courses.length}} khóa học
                </h2>
                <div style="width: 100%; height: 1px; background: #acadae;" ></div>
                <div>
                    <Table variant="simple">
                      <Thead>
                        <Tr>
                          <Th style="text-align: start;">Khóa học</Th>
                          <Th style="text-align: end;">Giá</Th>
                        </Tr>
                      </Thead>
                      <Tbody style="display: flex; flex-direction: column; gap: 12px 0px;">
                        {{#each courses}}
                          <Tr className="" key={{this._id}}>
                            <Td
                              style="width: 700px; cursor: pointer;"
                            >
                              <div class="content-table">
                                <img
                                  src={{this.thumbnail_url}}
                                  alt=""
                                  class="img-course"
                                />
                                <div className="">
                                  <div class="div_star">
                                    <i class="fa fa-star icon_star" aria-hidden="true"></i>
                                    
                                    <span style="color: #8C94A3; font-size: 14px;">
                                      451,444 review
                                    </span>
                                  </div>
                                  <h1 class="course_title">
                                    {{courseName}}
                                  </h1>
          
                                  <span style="color:#A1A5B3; font-size: 14px;">
                                    Hướng dẫn bởi:
                                    <span style="color: #4E5566;">
                                      
                                      {{splitTeacher this.courseName}}
                                    </span>
                                  </span>
                                </div>
                              </div>
                            </Td>
                            <Td style="width: 300px;">
                              <span style="font-size: 16px; font-weight: 500; color: #FF6636; text-align: end; display: block">
                                {{formatMoney this.price}} VND
                              </span>
                            </Td>
                          </Tr>
                          
                          {{/each}}
                      </Tbody>
                    </Table>
                 
                </div>
              </div>
        </div>
        <div class="notification">
          Bạn sẽ về trang chủ trong vòng
          <span class="text" id="time-text">10 </span> <span class="text">giây</span> nữa...
        </div>
      </div>
</body>
<script>
  let time = 10
  const countDown = document.getElementById("time-text")
  setInterval(updateCount,1000)
  function updateCount(){
    let seconds = time
    countDown.innerHTML=`${seconds}`
    time--
  }
   setTimeout(()=>{
           window.location.replace("https://staging.primeedu.io.vn")
        },10000)
function formatMoney(number) {
  let formattedNumber = number
    ?.toString()
    .replace(/\B(?=(\d{3})+(?!\d))/g, ".");
  return formattedNumber;
}
</script>
</html>