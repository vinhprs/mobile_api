{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      // https://docs.nestjs.com/cli/scripts#build
      // https://nodejs.org/api/packages.html#imports
      "@/*": ["*"],
      "@auth/*": ["auth/*"],
      "@common/*": ["common/*"],
      "@config/*": ["config/*"],
      "@modules/*": ["modules/*"],
      "@share/*": ["shared/*"],
      "@admin/*": ["admin/*"],
      "@gateway/*": ["gateway/*"],
      "@payment/*": ["payment/*"]
    },
    "target": "ES2019",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "incremental": true,
    "declaration": true,
    "newLine": "lf",
    "strict": true, //= alwaysStrict, strictNullChecks, strictBindCallApply, strictFunctionTypes, strictPropertyInitialization, noImplicitAny, noImplicitThis, useUnknownInCatchVariables
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    // "exactOptionalPropertyTypes": true,
    "importsNotUsedAsValues": "remove",
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    // "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true, // https://github.com/Microsoft/TypeScript/issues/2577
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false
  },
  "include": ["typings/global.d.ts", "src/**/*", "test/**/*", "bin/**/*"],
  "exclude": ["node_modules"]
}
